<?xml version="1.0"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1" >

  <!-- 컨텍스트 초기화 파라미터 선언 
  => 컨텍스트 초기화 파라미터는 모든 서블릿들이 접근하여 사용할 수 있다.
  -->
  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:mysql://localhost:3306/java67db?useUnicode=true&amp;characterEncoding=utf8</param-value>
  </context-param>
  <context-param>
    <param-name>driver</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>user</param-name>
    <param-value>java67</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>java67</param-value>
  </context-param>
  
  
  <!-- 필터 선언 -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>net.bitacademy.java67.step07.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  
  <!-- 필터에 URL 연결 -->
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>













